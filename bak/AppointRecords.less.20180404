  .top {
    height: 40px;
    .main {
      .font14;
      .flex1;
    }
    .extra {
      .font12;
      .textCenter;
      background-color: #26AB28;
      color: white;
      border-radius: 18px;
      width: 45px;
      height: 16px;
      line-height: 16px;
      justify-content: end;
    }
  }
  .bottom {
    .font13;
    .fontGray;
  }
}

.body {
  .rowDiv;
  .row {
    .font13;
    .fontGray;
    height: 28px;
    .flex1 span {
      .fontOrange
    }
  }
}

.footer {
  .rowDiv;
  .left {
    .flex1;
    .font13;
    color: @IOS_BLUE;
  }
}

.rowSep {
  height: 10px;
  background-color: @LINE;
}

