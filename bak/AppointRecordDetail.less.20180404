@import "../../utils/common";

.header {
  .font13;
  .fontGray;
  .textCenter;
  padding: 10px 15px;
  border-bottom: 1px solid @LINE;
}

.topCard {
  padding-left: 15px;
  border-bottom: 1px solid @LINE;
  .font13;
  background-color: white;
  margin-bottom: 10px;
  .row {
    padding: 10px 0;
    .label {
      .fontGray;
    }
    .content {
      margin-left: 10px;
    }
  }
  .sep {
    height: 1px;
    background-color: @LINE;
  }
}

.downCard {
  padding: 10px 15px;
  .font13;
  background-color: white;
  border-top: 1px solid @LINE;
  border-bottom: 1px solid @LINE;
  margin-bottom: 10px;
  .row{
    height: 28px;
  }
  .label {
    flex: 1;
    .fontGray;
  }
}

.button {
  margin: 0 15px;
  .font15;
}

.alert {
  padding: 25px 5px 10px;
  .font14;
}

