	<!-- **************** 收费项视图START **************** -->
	<bean id="commonItemDao" class="com.lenovohit.core.dao.impl.GenericDaoJpaImpl">
		<constructor-arg value="com.lenovohit.hcp.base.model.CommonItemInfo" />
